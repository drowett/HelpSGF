@model TagTypeModel

@{
    ViewData["Title"] = "Create";
    var available = new List<KeyValuePair<String, String>>()
        {
        new KeyValuePair<String, String>("company", "Company"),
        new KeyValuePair<String, String>("contact", "Contact"),
        new KeyValuePair<String, String>("person", "Person")
        };
    var selected = new List<KeyValuePair<String, String>>();
}

<h2>Create</h2>

<h4>Tag Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppliesTo" class="control-label"></label><br />
                @Html.ListBoxFor(m => m.AppliesTo, new MultiSelectList(Model.AvailableAppliesTo, "ID", "Name"), new { @class = "select2" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
